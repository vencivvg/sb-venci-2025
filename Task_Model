class Measures{   1-бройка, 2-кг, 3-литър, 4-метър, 5-кв. метър
long id;
String name;
}

class Products{
long id;
String code;
String name;
int msrId;
}

class Partners{
String eik;
String firstName;
String surName;
String familyName;
String companyName;
String email;
String phoneNumber;
String address;
}

class Users extends Partners{
long id;
String userName;
String passWord;
String userRole;  // ADMIN, POWERUSER, USER
}

class Invoice_Details{
long id;
long productId;
double quantity;
double unitPrice
double totalPrice // ( = d_quantity  * d_unit_price )
}

class Invoice{
long id;
long issuerId;
int currencyId;
long sellerId;
long buyerId;
date invoiceDate;
long invoiceTotalPrice;
long status;  // FK s_id // paid, pending, rejected 
}

class InvoiceStatus{
long id;
String name;
}

class currencies{
int id;
String currencyCode; // BGN, EUR, USD, GBP, CHF
}

